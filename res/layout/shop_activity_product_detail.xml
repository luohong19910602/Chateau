<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main" >

    <include
        android:id="@+id/productDetailBar"
        layout="@layout/shopping_action_bar" />

    <net.itaem.chateau.activity.shopping.view.SlideShowView
        android:id="@+id/slideshowView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/productDetailBar"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/productDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/slideshowView"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/productNameInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_detail_name"
                android:textColor="@color/black"
                android:textSize="@dimen/product_detail_text_size" />

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/productNameInfo"
                android:text="this is the product name"
                android:textColor="@color/black"
                android:textSize="@dimen/product_detail_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/productPriceInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_detail_price"
                android:textColor="@color/black"
                android:textSize="@dimen/product_detail_text_size" />

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/productPriceInfo"
                android:text="$2000"
                android:textColor="@color/black"
                android:textSize="@dimen/product_detail_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/productOldPriceInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_detail_old_price"
                android:textColor="@color/black"
                android:textSize="@dimen/product_detail_text_size" />
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#000000" />

            <TextView
                android:id="@+id/productOldPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/productOldPriceInfo"
                android:text="$3000"
                android:textColor="@color/black"
                android:textSize="@dimen/product_detail_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/productModelInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_detail_model"
                android:textColor="@color/black"
                android:textSize="@dimen/product_detail_text_size" />

            <GridView
                android:id="@+id/modelRadios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numColumns="4" >
            </GridView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/productColorInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_detail_color"
                android:textColor="@color/black"
                android:textSize="@dimen/product_detail_text_size" />

            <GridView
                android:id="@+id/colorRadios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numColumns="4" >
            </GridView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/productQuantityInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_detail_quantity"
                android:textColor="@color/black"
                android:textSize="@dimen/product_detail_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/productQuantityInfo"
                android:orientation="horizontal" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_btn" />

                <TextView
                    android:id="@+id/productQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/product_detail_text_size" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/minius_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="(IN STOCK)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/product_detail_text_size" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <TextView
                android:id="@+id/productGraphic"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:text="@string/product_detail_graphic_details"
                android:textColor="@color/black"
                android:textSize="@dimen/product_detail_text_size" />

            <Button
                android:id="@+id/seeDetailBtn"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/graphic_btn" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
             >

            <Button
                android:id="@+id/buyBtn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/buy_btn"
                android:gravity="center"
                android:text="BUY NOW"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/addToCartBtn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/buy_btn"
                android:gravity="center"
                android:text="ADD TO CART"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>