<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/personal_mycart_item_height"
    android:orientation="vertical">
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/personal_collection_item_bg" >
    <ImageView
        android:id="@+id/personal_mycart_product_image"
        android:layout_width="@dimen/personal_mycart_product_image_width"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_height="@dimen/personal_mycart_product_image_height"
        android:src="@drawable/product"/>
    
    <ImageView
        android:id="@+id/personal_mycart_devide_line" 
        android:layout_width="1dp"
        android:layout_height="@dimen/personal_mycart_product_image_height"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/personal_mycart_product_image"
        android:background="@drawable/personal_collection_item_devide_line"/>
    

    <LinearLayout
        android:layout_toRightOf="@+id/personal_mycart_devide_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        
       <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">
        <TextView 
            android:id="@+id/personal_mycart_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/personal_mycart_product_name_text_size"
            android:textColor="@color/black"
            android:text="ISomm"/>
        <TextView 
            android:id="@+id/personal_mycart_product_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
 			android:layout_below="@+id/personal_mycart_product_name"
 			android:layout_alignParentLeft="true"
 			android:textSize="@dimen/personal_mycart_product_desc_text_size"
 			android:textColor="@color/black"
            android:text="teste on demand"/>
           
        <TextView 
            android:id="@+id/personal_mycart_product_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/personal_mycart_product_select"
            android:textColor="@color/normal_text_color_gray"
            android:textSize="@dimen/personal_mycart_product_name_text_size"
            android:text="$2000"/>
 
        <Button
            android:id="@+id/personal_mycart_product_select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/personal_mycart_no_selected"/>
        
        </RelativeLayout>   
            
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">
        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/personal_mycart_btn_add"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/selector_btn_input_four"/>
            <TextView
                android:id="@+id/personal_mycart_product_num"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/bg_main"
                android:gravity="center_horizontal|center_vertical"
                android:text="1"/>
             <Button
                android:id="@+id/personal_mycart_btn_sub"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/selector_btn_input_five"/>
            
        </LinearLayout>  
            <Button 
                android:id="@+id/personal_mycart_btn_delete"
                android:layout_alignParentRight="true"
                android:text="@string/personal_mycart_delete"
                android:textSize="@dimen/personal_mycart_btn_delete_text_size"
                android:layout_width="@dimen/personal_mycart_btn_delete_width"
                android:layout_height="@dimen/personal_mycart_btn_delete_height"
                android:layout_marginTop="15dp"
                android:background="@drawable/selector_btn_input_three"/>
        </RelativeLayout>         
    </LinearLayout>  
     
</RelativeLayout>
    
</LinearLayout>
