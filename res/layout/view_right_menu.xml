<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >
    
<RelativeLayout 
    android:layout_width="180dp"
    android:layout_height="50dp">   
<ImageView
    android:id="@+id/hide_right_menu"
    android:src="@drawable/right_menu_normal0"
    android:layout_alignParentRight="true"
    android:layout_width="45dp"
    android:layout_height="45dp">
</ImageView>

</RelativeLayout> 


<ImageView
    android:id="@+id/wine_starting"
    android:src="@drawable/right_menu_normal1"
    android:layout_width="160dp"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="40dp"
    android:layout_height="50dp">
</ImageView>
<ImageView
    android:id="@+id/setting"
    android:src="@drawable/right_menu_normal2"
    android:layout_width="160dp"
    android:layout_height="50dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="40dp">
</ImageView>
<ImageView
    android:id="@+id/add_wine"
    android:src="@drawable/right_menu_normal3"
    android:layout_width="160dp"
    android:layout_height="50dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="40dp">
</ImageView>
<ImageView
    android:id="@+id/wifi"
    android:src="@drawable/right_menu_normal4"
    android:layout_width="160dp"
    android:layout_height="50dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="40dp">
</ImageView>
<ImageView
    android:id="@+id/online_store"
    android:src="@drawable/right_menu_normal5"
    android:layout_width="160dp"
    android:layout_height="50dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="40dp">
</ImageView>
<ImageView
    android:id="@+id/help"
    android:src="@drawable/right_menu_normal6"
    android:layout_width="160dp"
    android:layout_height="50dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="40dp">
</ImageView>
<ImageView
    android:id="@+id/about"
    android:src="@drawable/right_menu_normal7"
    android:layout_width="160dp"
    android:layout_height="50dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="40dp">
</ImageView>

</LinearLayout>